{
    "name": "@frontify/fondue-components",
    "type": "module",
    "version": "1.2.3",
    "homepage": "https://github.com/Frontify/fondue",
    "repository": {
        "type": "git",
        "url": "https://github.com/Frontify/fondue",
        "directory": "packages/components"
    },
    "bugs": {
        "url": "https://github.com/frontify/fondue/issues"
    },
    "publishConfig": {
        "access": "public"
    },
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/fondue-components.js"
        },
        "./styles": "./dist/style.css"
    },
    "files": [
        "dist"
    ],
    "engines": {
        "node": ">=18"
    },
    "scripts": {
        "build": "vite build",
        "build:storybook": "storybook build",
        "install:playwright": "playwright install --with-deps",
        "lint": "eslint .",
        "lint:fix": "eslint --fix .",
        "storybook": "storybook dev -p 6006",
        "typecheck": "tsc --noEmit",
        "test": "vitest run --coverage",
        "test:ui": "vitest --ui",
        "test:watch": "vitest",
        "test:components": "playwright test --ui",
        "test:components:ci": "playwright test",
        "create:component": "tsx scripts/createNewComponent.ts"
    },
    "peerDependencies": {
        "@frontify/fondue-icons": "workspace:^",
        "@frontify/fondue-tokens": "workspace:^",
        "react": "^18",
        "react-dom": "^18"
    },
    "dependencies": {
        "@radix-ui/react-checkbox": "^1.0.4",
        "@radix-ui/react-dialog": "^1.0.5",
        "@radix-ui/react-label": "^2.0.2",
        "@radix-ui/react-progress": "^1.0.3",
        "@radix-ui/react-separator": "^1.0.3",
        "@radix-ui/react-toggle-group": "^1.0.4",
        "@radix-ui/react-tooltip": "^1.0.7"
    },
    "devDependencies": {
        "@etchteam/storybook-addon-status": "^4.2.4",
        "@frontify/eslint-config-react": "^0.17.6",
        "@frontify/fondue-icons": "workspace:^",
        "@frontify/fondue-tokens": "workspace:^",
        "@playwright/experimental-ct-react": "1.41.2",
        "@storybook/addon-a11y": "^8.0.10",
        "@storybook/addon-actions": "^8.0.10",
        "@storybook/addon-essentials": "^8.0.10",
        "@storybook/addon-interactions": "^8.0.10",
        "@storybook/addon-links": "^8.0.10",
        "@storybook/blocks": "^8.0.10",
        "@storybook/manager-api": "^8.0.10",
        "@storybook/react": "^8.0.10",
        "@storybook/react-vite": "^8.0.10",
        "@storybook/theming": "^8.0.10",
        "@tailwindcss/forms": "^0.5.7",
        "@testing-library/jest-dom": "^6.4.5",
        "@testing-library/react": "^15.0.6",
        "@testing-library/user-event": "^14.5.2",
        "@types/node": "^20.12.8",
        "@types/react": "^18.3.1",
        "@types/sinon": "^17.0.3",
        "@vitejs/plugin-react": "^4.2.1",
        "@vitest/coverage-v8": "^1.4.0",
        "@vitest/ui": "^1.4.0",
        "autoprefixer": "^10.4.19",
        "chalk": "^5.3.0",
        "eslint": "^8.57.0",
        "eslint-plugin-notice": "^0.9.10",
        "happy-dom": "^14.7.1",
        "postcss": "^8.4.38",
        "postcss-import": "^16.1.0",
        "prettier": "^3.2.5",
        "react": "^18.3.1",
        "react-dom": "^18.3.1",
        "sinon": "^17.0.1",
        "storybook": "^8.0.10",
        "storybook-dark-mode": "^4.0.1",
        "tailwind-merge": "^2.3.0",
        "tailwind-variants": "^0.2.1",
        "tailwindcss": "^3.4.3",
        "tsx": "^4.9.3",
        "typescript": "^5.4.5",
        "vite": "^5.2.11",
