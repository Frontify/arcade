{
    "name": "@frontify/fondue-components",
    "private": true,
    "version": "0.0.0",
    "type": "module",
    "files": [
        "dist",
        "tailwind.config.ts"
    ],
    "main": "./dist/component-library.cjs",
    "module": "./dist/component-library.js",
    "exports": {
        "./content": {
            "types": "./.contentlayer/generated/index.d.ts",
            "import": "./.contentlayer/generated/index.mjs"
        },
        ".": {
            "types": "./dist/component-lib.d.ts",
            "import": "./dist/component-lib.js"
        },
        "./styles": "./dist/index.css",
        "./tailwind": "./tailwind.config.js"
    },
    "scripts": {
        "dev": "concurrently 'vite build --watch' 'contentlayer dev'",
        "build": "tsc && pnpm build:lib && contentlayer build",
        "build:lib": "vite build",
        "lint": "eslint .",
        "lint:fix": "eslint --fix .",
        "preview": "vite preview"
    },
    "dependencies": {
        "@frontify/fondue-tokens": "3.4.0",
        "@tailwindcss/forms": "^0.5.3",
        "@vitejs/plugin-react": "^4.2.1",
        "concurrently": "^8.2.2",
        "contentlayer": "^0.3.4",
        "postcss": "^8.4.33",
        "postcss-import": "^15.1.0",
        "react": "^18.2.0",
        "rollup": "^3.29.0",
        "tailwindcss": "^3.4.1",
        "vite-plugin-dts": "^3.5.3",
        "vite-plugin-watch": "^0.2.0"
    },
    "devDependencies": {
        "@types/react": "^18.2.51",
        "eslint": "^8.56.0",
        "prettier": "^3.2.5",
        "typescript": "^5.2.2",
        "vite": "^5.0.8",
        "vite-plugin-lib-inject-css": "^1.3.0"
    }
}
