{
    "name": "@frontify/fondue-components",
    "type": "module",
    "version": "3.1.0",
    "homepage": "https://github.com/Frontify/fondue",
    "repository": {
        "type": "git",
        "url": "https://github.com/Frontify/fondue",
        "directory": "packages/components"
    },
    "bugs": {
        "url": "https://github.com/frontify/fondue/issues"
    },
    "publishConfig": {
        "access": "public"
    },
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/fondue-components.js"
        },
        "./styles": "./dist/style.css"
    },
    "files": [
        "dist"
    ],
    "engines": {
        "node": ">=18"
    },
    "scripts": {
        "build": "vite build",
        "build:storybook": "storybook build",
        "install:playwright": "playwright install --with-deps",
        "lint": "eslint .",
        "lint:fix": "eslint --fix .",
        "storybook": "storybook dev -p 6006",
        "typecheck": "tsc --noEmit",
        "test": "vitest run --coverage",
        "test:ui": "vitest --ui",
        "test:watch": "vitest",
        "test:components": "playwright test --ui",
        "test:components:ci": "playwright test",
        "test:components:update-snapshot": "playwright test --update-snapshots",
        "create:component": "tsx scripts/createNewComponent.ts"
    },
    "peerDependencies": {
        "@frontify/fondue-icons": "workspace:^",
        "@frontify/fondue-tokens": "workspace:^",
        "react": "^18",
        "react-dom": "^18"
    },
    "dependencies": {
        "@radix-ui/react-checkbox": "^1.1.1",
        "@radix-ui/react-dialog": "^1.1.1",
        "@radix-ui/react-dropdown-menu": "^2.1.1",
        "@radix-ui/react-label": "^2.1.0",
        "@radix-ui/react-popover": "^1.1.1",
        "@radix-ui/react-progress": "^1.1.0",
        "@radix-ui/react-select": "^2.1.1",
        "@radix-ui/react-separator": "^1.1.0",
        "@radix-ui/react-slider": "^1.2.0",
        "@radix-ui/react-slot": "^1.1.0",
        "@radix-ui/react-switch": "^1.1.0",
        "@radix-ui/react-toggle-group": "^1.1.0",
        "@radix-ui/react-tooltip": "^1.1.2",
        "downshift": "^9.0.8",
        "react-colorful": "^5.6.1",
        "tailwind-merge": "^2.4.0",
        "tailwind-variants": "^0.2.1"
    },
    "devDependencies": {
        "@babel/core": "^7.24.9",
        "@etchteam/storybook-addon-status": "^5.0.0",
        "@frontify/eslint-config-react": "^0.17.7",
        "@frontify/fondue-icons": "workspace:^",
        "@frontify/fondue-tokens": "workspace:^",
        "@playwright/experimental-ct-react": "^1.45.3",
        "@playwright/test": "^1.45.3",
        "@storybook/addon-a11y": "^8.2.9",
        "@storybook/addon-actions": "^8.2.9",
        "@storybook/addon-essentials": "^8.2.9",
        "@storybook/addon-interactions": "^8.2.9",
        "@storybook/addon-links": "^8.2.9",
        "@storybook/blocks": "^8.2.9",
        "@storybook/manager-api": "^8.2.9",
        "@storybook/react": "^8.2.9",
        "@storybook/react-vite": "^8.2.9",
        "@storybook/theming": "^8.2.9",
        "@tailwindcss/forms": "^0.5.7",
        "@testing-library/dom": "^10.4.0",
        "@testing-library/jest-dom": "^6.4.8",
        "@testing-library/react": "^16.0.0",
        "@testing-library/user-event": "^14.5.2",
        "@types/node": "^20.14.12",
        "@types/react": "^18.3.4",
        "@types/sinon": "^17.0.3",
        "@vitejs/plugin-react": "^4.3.1",
        "@vitest/coverage-v8": "^2.0.5",
        "@vitest/ui": "^2.0.5",
        "autoprefixer": "^10.4.20",
        "chalk": "^5.3.0",
        "eslint": "^8.57.0",
        "eslint-plugin-notice": "^1.0.0",
        "eslint-plugin-storybook": "^0.8.0",
        "happy-dom": "^14.12.3",
        "postcss": "^8.4.41",
        "postcss-import": "^16.1.0",
        "prettier": "^3.3.3",
        "react": "^18.3.1",
        "react-dom": "^18.3.1",
        "sass": "^1.77.8",
        "sinon": "^18.0.0",
        "storybook": "^8.2.9",
        "storybook-dark-mode": "^4.0.2",
        "tailwindcss": "^3.4.10",
        "tsx": "^4.16.2",
        "typescript": "^5.5.4",
        "vite": "^5.3.4",
        "vite-plugin-dts": "^3.9.1",
        "vite-tsconfig-paths": "^4.3.2",
        "vitest": "^2.0.5"
    }
}
