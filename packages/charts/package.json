{
    "name": "@frontify/fondue-charts",
    "type": "module",
    "version": "1.8.0",
    "description": "Frontify's data viz library",
    "author": "Frontify Developers <developers@frontify.com>",
    "repository": {
        "type": "git",
        "url": "https://github.com/Frontify/fondue",
        "directory": "packages/charts"
