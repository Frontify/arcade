        "react-dom": "^18.2.0",
        "storybook": "^8.0.8",
        "storybook-dark-mode": "^4.0.1",
        "tailwindcss": "^3.4.3",
        "typescript": "^5.4.5",
        "vite": "^5.2.8",
        "vite-plugin-dts": "^3.8.1",
        "vite-plugin-eslint": "^1.8.1",
        "vite-tsconfig-paths": "^4.3.2",
        "vitest": "^1.4.0"
    }
