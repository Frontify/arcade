{
    "name": "root",
    "private": true,
    "scripts": {
        "build": "pnpm build:fondue",
        "build:fondue": "pnpm --stream --filter {packages/fondue} build",
        "lint": "pnpm --stream --filter {packages/**} lint",
        "typecheck": "pnpm --stream --filter {packages/**} --parallel typecheck",
        "ci:version": "pnpm build && changeset version",
        "ci:publish": "pnpm build && changeset publish"
    },
    "devDependencies": {
        "@changesets/cli": "^2.27.1",
        "@frontify/eslint-config-typescript": "^0.16.2",
        "eslint": "^8.48.0",
        "eslint-plugin-notice": "^0.9.10",
        "glob": "^10.3.4",
        "prettier": "^3.0.3",
        "typescript": "^5.2.2"
    },
    "pnpm": {
        "overrides": {
            "tough-cookie@<4.1.3": ">=4.1.3",
            "semver@<5.7.2": ">=5.7.2",
            "semver@>=6.0.0 <6.3.1": ">=6.3.1",
            "semver@>=7.0.0 <7.5.2": ">=7.5.2",
            "@react-types/shared": "3.16.0",
            "@react-stately/checkbox": "3.3.2",
            "@react-stately/collections": "3.4.4",
            "@react-stately/combobox": "3.2.2",
            "@react-stately/list": "3.5.4",
            "@react-stately/menu": "3.4.4",
            "@react-stately/overlays": "3.4.2",
            "@react-stately/radio": "3.6.0",
            "@react-stately/select": "3.3.2",
            "@react-stately/table": "3.5.0",
            "@react-stately/toggle": "3.4.2",
            "@react-stately/tooltip": "3.2.2",
            "@react-stately/tree": "3.3.4"
        }
    }
}
