{
    "name": "@frontify/arcade",
    "version": "0.0.6",
    "description": "Design system of Frontify",
    "main": "dist/index.js",
    "module": "dist/index.mjs",
    "files": [
        "dist"
    ],
    "exports": {
        ".": {
            "require": "./dist/index.js",
            "import": "./dist/index.mjs",
            "default": "./dist/index.js"
        },
        "./config": "./dist/config.js"
    },
    "types": "dist/index.d.ts",
    "scripts": {
        "build": "cross-env NODE_ENV=production npm run clean && npm run generate && npm run build:css && npm run build:ts",
        "build:ts": "rollup -c",
        "build:css": "tailwindcss -i ./src/styles/index.css -o ./dist/index.css",
        "build:storybook": "build-storybook -s .storybook/assets",
        "clean": "rimraf dist",
        "component:create": "ts-node scripts/createNewComponent.ts",
        "generate": "ts-node scripts/generateExports.ts",
        "lint": "npm run lint:ts && npm run lint:css",
        "lint:fix": "npm run lint:ts:fix && npm run lint:css:fix",
        "lint:ts": "eslint 'src/**/*.{ts,tsx}'",
        "lint:ts:fix": "eslint --fix 'src/**/*.{ts,tsx}'",
        "lint:css": "stylelint 'src/**/*.css'",
        "lint:css:fix": "stylelint --fix 'src/**/*.css'",
        "test": "cypress run-ct",
        "test:browser": "cypress open-ct",
        "test:file": "cypress run-ct --spec",
        "typecheck": "tsc",
        "storybook": "start-storybook -p 6006 -s .storybook/assets",
        "prepublishOnly": "npm run build",
        "prepare": "is-ci || husky install"
    },
    "keywords": [
        "frontify",
        "react",
        "components",
        "design system"
    ],
    "author": "Frontify Developers <developers@frontify.com>",
    "repository": {
        "url": "https://github.com/frontify/arcade"
    },
    "bugs": {
        "url": "https://github.com/frontify/arcade/issues"
    },
    "devDependencies": {
        "@cypress/react": "^5.9.1",
        "@cypress/vite-dev-server": "^2.0.2",
        "@frontify/eslint-config-react": "^0.7.0",
        "@frontify/stylelint-config": "^0.1.0",
        "@rollup/plugin-alias": "^3.1.4",
        "@rollup/plugin-commonjs": "^19.0.1",
        "@rollup/plugin-node-resolve": "^13.0.2",
        "@rollup/plugin-url": "^6.0.0",
        "@storybook/addon-actions": "^6.3.2",
        "@storybook/addon-essentials": "^6.3.2",
        "@storybook/addon-links": "^6.3.2",
        "@storybook/addon-postcss": "^2.0.0",
        "@storybook/react": "^6.3.2",
        "@svgr/core": "^5.5.0",
        "@svgr/plugin-jsx": "^5.5.0",
        "@svgr/plugin-prettier": "^5.5.0",
        "@svgr/plugin-svgo": "^5.5.0",
        "@types/react": "^17.0.14",
        "@types/react-dom": "^17.0.9",
        "@types/react-router-dom": "^5.1.8",
        "@vitejs/plugin-react-refresh": "^1.3.5",
        "autoprefixer": "^10.3.1",
        "chalk": "^4.1.1",
        "cross-env": "^7.0.3",
        "cypress": "^7.7.0",
        "esbuild": "^0.12.15",
        "eslint": "^7.30.0",
        "eslint-plugin-jsx-a11y": "^6.4.1",
        "fast-glob": "^3.2.7",
        "husky": "^7.0.1",
        "is-ci": "^3.0.0",
        "postcss": "^8.3.5",
        "postcss-cli": "^8.3.1",
        "prettier": "^2.3.2",
        "rimraf": "^3.0.2",
        "rollup": "^2.53.2",
        "rollup-plugin-dts": "^3.0.2",
        "rollup-plugin-esbuild": "^4.5.0",
        "rollup-plugin-peer-deps-external": "^2.2.4",
        "rollup-plugin-postcss": "^4.0.0",
        "storybook-builder-vite": "^0.0.12",
        "storybook-dark-mode": "^1.0.8",
        "stylelint": "^13.13.1",
        "tailwindcss": "^2.2.4",
        "ts-node": "^10.1.0",
        "typescript": "^4.3.5",
        "vite": "^2.4.2",
        "vite-react-jsx": "^1.1.2"
    },
    "peerDependencies": {
        "react": "^17.0.2",
        "react-dom": "^17.0.2",
        "react-popper": "^2.2.5",
        "react-router-dom": "^5.2.0"
    },
    "dependencies": {
        "deepmerge": "^4.2.2",
        "framer-motion": "^4.1.17"
    }
}
