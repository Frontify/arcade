{
    "ts-node": {
        "files": true
    },
    "compilerOptions": {
        "baseUrl": ".",
        "esModuleInterop": true,
        "lib": ["dom", "dom.iterable", "esnext"],
        "module": "ESNext",
        "moduleResolution": "node",
        "noUnusedLocals": true,
        "noEmit": true,
        "strict": true,
        "target": "esnext",
        "jsx": "react",
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "paths": {
            "@components/*": ["./src/components/*"],
            "@foundation/*": ["./src/foundation/*"],
            "@hooks/*": ["./src/hooks/*"],
            "@layout/*": ["./src/layout/*"],
            "@typography/*": ["./src/typography/*"],
            "@utilities/*": ["./src/utilities/*"],

            "slate-react": ["node_modules/slate-react"]
        },
        "types": ["cypress", "cypress-real-events", "vite/client"]
    },
    "include": ["src/types", "src/**/*", "cypress/support/component.ts", "scripts/**/*"],
    "exclude": ["node_modules", "dist"]
}
